<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MainActivityStyle"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/size_16dp"
    android:paddingEnd="@dimen/size_16dp">



    <TextView
        android:id="@+id/textMainView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="12dp"
        android:text="@string/title"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize" />


    <Button
        android:id="@+id/buttonMainSearch"
        style="@style/MainButtonStyle"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="@dimen/size_16dp"
        app:icon="@drawable/button_search"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/size_8dp"
        app:iconTint="@color/YPblack"
        app:cornerRadius="@dimen/buttonRadius"
        android:text="@string/search" />


    <Button
        android:id="@+id/buttonMainMediateka"
        style="@style/MainButtonStyle"
        android:layout_marginTop="@dimen/size_16dp"
        android:layout_marginBottom="@dimen/size_16dp"
        android:layout_marginHorizontal="@dimen/size_16dp"
        app:icon="@drawable/button_mediateka"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/size_8dp"
        app:iconTint="@color/YPblack"
        app:cornerRadius="@dimen/buttonRadius"
        android:text="@string/mediateka" />


    <Button
        android:id="@+id/buttonMainSettings"
        style="@style/MainButtonStyle"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="@dimen/size_16dp"
        app:icon="@drawable/button_settings"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/size_8dp"
        app:iconTint="@color/YPblack"
        app:cornerRadius="@dimen/buttonRadius"
        android:text="@string/settings" />
</LinearLayout>




