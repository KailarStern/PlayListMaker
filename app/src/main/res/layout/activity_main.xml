<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            android:text="@string/title"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size" />


        <Button
            android:id="@+id/button_big_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="28dp"
            android:backgroundTint="@color/white"
            android:gravity="center"
            app:icon="@drawable/button_search"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/YPblack"
            app:cornerRadius="16dp"
            android:text="@string/search"
            android:textColor="@color/YPblack"
            android:textSize="@dimen/text_size"
            android:textAllCaps="false"/>


        <Button
            android:id="@+id/button_big_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/white"
            android:gravity="center"
            app:icon="@drawable/button_mediateka"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/YPblack"
            app:cornerRadius="16dp"
            android:text="@string/mediateka"
            android:textColor="@color/YPblack"
            android:textSize="@dimen/text_size"
            android:textAllCaps="false"/>


        <Button
            android:id="@+id/button_big_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/white"
            android:gravity="center"
            app:icon="@drawable/button_settings"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/YPblack"
            app:cornerRadius="8dp"
            android:text="@string/settings"
            android:textColor="@color/YPblack"
            android:textSize="@dimen/text_size"
            android:textAllCaps="false"/>


    </LinearLayout>

</RelativeLayout>
