<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="horizontal"
    android:paddingStart="13dp"
    android:gravity="center_vertical">


    <ImageView
        android:id="@+id/imageAlbum"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_mock_task"
        tools:src="@drawable/ic_mock_task" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTrackName"
            style="@style/SearchMusicItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="Shape of You" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textArtistName"
                style="@style/SearchMusicItemIcons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                tools:text="Ed Sheeran" />

            <ImageView
                android:id="@+id/iconNextToArtist"
                style="@style/SearchMusicItemIcons"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/dot" />

            <TextView
                android:id="@+id/textTrackTime"
                style="@style/SearchMusicItemIcons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                tools:text="3:15" />
        </LinearLayout>
    </LinearLayout>



    <ImageView
        android:id="@+id/iconRight"
        style="@style/SearchMusicItemIcons"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/arrowright" />

</LinearLayout>

