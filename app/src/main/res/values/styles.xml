<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Для мейн активити-->
        <style name="MainActivityStyle">
            <item name="android:background">@color/blue</item>
        </style>


        <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">0dp</item>
            <item name="android:layout_weight">1</item>
            <item name="android:backgroundTint">@color/white</item>
            <item name="android:gravity">center</item>
            <item name="android:textColor">@color/YPblack</item>
            <item name="android:textSize">@dimen/textSize</item>
            <item name="android:textAllCaps">false</item>
            <item name="android:fontFamily">@font/ys_display_medium</item>
            <item name="android:elevation">0dp</item>
        </style>
    <!--сеттингс активити-->

    <style name="SettingsActivityStyle">
        <item name="android:background">@color/white</item>
    </style>


    <style name="SettingsItemFrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_61dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>


    <style name="SettingsItemTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|start</item>
        <item name="android:layout_marginStart">@dimen/size_16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>


    <style name="SettingsItemImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:layout_marginEnd">@dimen/size_18dp</item>
        <item name="android:tint">@color/YPTextGray</item>
    </style>


    <style name="CustomSwitchStyle">
        <item name="android:thumbTint">@color/YPKightGrey</item>
        <item name="android:trackTint">@color/YPTextGray</item>
    </style>

    <style name="IconColorStye">
        <item name="android:tint">@color/YPblack</item>
    </style>

    <style name="TextBackStyle">
        <item name="android:textColor">@color/YPblack</item>
    </style>

    <!--Сёрч активити-->

    <style name="SearchEditTextStyle">
        <item name="android:drawableTint">@color/iconSearchActivity</item>
        <item name="android:textColorHint">@color/iconSearchActivity</item>
        <item name="android:textColor">@color/textSearchActivity</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:background">@drawable/rounded_edittext_bg</item>
        <item name="android:lines">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ErrorsTextStyle">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="RoundedButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>


    <!--Сёрч мьюзик айтем активити-->


    <style name="SearchMusicItem">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SearchMusicItemIcons">
    </style>

    <!--Активити АудиоПлеер -->
    <style name="AudioPlayerBackIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:src">@drawable/arrowleft</item>
        <item name="android:tint">@color/AudioPlayerBackIcon</item>
    </style>

    <style name="AudioPlayerAlbumCoverStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="AudioPlayerTrackNameStyle">
        <item name="android:textColor">@color/AudioPlayerText</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="AudioPlayerLabelDuration">
        <item name="android:textColor">@color/YPTextGray</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="AudioPlayerDuration">
        <item name="android:textColor">@color/AudioPlayerText</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>



</resources>